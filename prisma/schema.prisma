// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique

  hash     String
  hashedRt String?
  Eoa      Eoa[]
  PayLink  PayLink[]
}

model Eoa {
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now())
  chainId      Int
  symbol       String
  nativeToken  Boolean
  tokenAddress String?
  address      String
  owner        User     @relation(fields: [ownerId], references: [id])
  ownerId      String

  @@unique([chainId, symbol, address, ownerId])
}

model PayLink {
  id                 String   @id @default(uuid())
  createdAt          DateTime @default(now())
  priceAmount        Int
  fiatCurrency       String
  destinationChainId Int
  owner              User     @relation(fields: [ownerId], references: [id])
  ownerId            String
}
