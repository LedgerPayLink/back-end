// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  email     String    @unique
  hash      String
  hashedRt  String?
  eoas      Eoa[]
  payLinks  PayLink[]
}

model Eoa {
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now())
  chainId      Int
  symbol       String
  nativeToken  Boolean
  tokenAddress String?
  address      String
  owner        User     @relation(fields: [ownerId], references: [id])
  ownerId      String

  @@unique([chainId, ownerId, tokenAddress])
}

model PayLink {
  id                 String    @id @default(uuid())
  createdAt          DateTime  @default(now())
  priceAmount        Int
  fiatCurrency       String
  destinationChainId Int
  owner              User      @relation(fields: [ownerId], references: [id])
  ownerId            String
  payments           Payment[]
}

model Payment {
  id             String   @id @default(uuid())
  createdAt      DateTime @default(now())
  expirationDate DateTime
  priceAmount    Int
  fiatCurrency   String
  chainId        Int
  symbol         String
  tokenAmount    BigInt
  status         String
  payLink        PayLink  @relation(fields: [payLinkId], references: [id])
  payLinkId      String
}
